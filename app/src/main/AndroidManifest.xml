<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.platzi.boomerang">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera2" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Platzi">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EnviaOperacion"
            android:label="@string/title_activity_envia_operacion"
            android:theme="@style/Theme.Platzi" />
        <activity
            android:name=".BuscaTarjeta"
            android:label="@string/title_activity_busca_tarjeta"
            android:theme="@style/Theme.Platzi" />
        <activity
            android:name=".ConsultaSaldo"
            android:label="@string/title_activity_consulta_saldo"
            android:theme="@style/Theme.Platzi" />
        <activity
            android:name=".ConfigActivity"
            android:label="@string/title_activity_config"></activity>
    </application>

</manifest>